    style.
        #layoutDefault {
            background: #1f2d41 !important;
        }
        .page-header-dark {
            padding-top: 4rem;
        }
        .menu {
            margin-top: 1.5rem;
        }
        .item-menu {
            margin-top: 2rem;
        }
        .item-menu-text {
            padding-left: 3rem;
            padding-top: 0.5rem;
        }
        .card-text {
            color: #242a85;
        }
        .video {
            padding-top: 2rem;
        }
        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .video-container iframe, .video-container object, .video-container embed {
            position: absolute;
            top: 0; left: 0;
            width: 100%;
            height: 100%;
        }
        .title {
            padding-top: 2rem;
        }
        .timer {
            max-width: 100%;
        }
        @media only screen and (max-width: 600px) {
            .title {
                font-size: 1.5rem !important;
            }
        }
